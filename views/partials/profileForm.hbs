<div class="py-4">
  <h2>Datos del perfil</h2>
  <hr class="w-50" />

  <form id="form">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input id="email" name="email" class="form-control m-auto" disabled />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input id="nombre" name="nombre" class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input id="password" name="password" placeholder="*****" required type="password" class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input id="password2" name="password2" placeholder="*****" required type="password"
          class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>AÃ±os de experiencia</label>
        <input id="annos" name="annos" required class="form-control m-auto" type="number" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input id="especialidad" name="especialidad" required class="form-control m-auto" />
      </div>
    </div>
    <div class="mb-1">
      <button id="update-account-btn" class="btn btn-primary">Actualizar</button>
    </div>
    <div>
      <button id="delete-account-btn" class="btn btn-danger">Eliminar cuenta</button>
    </div>
  </form>
</div>